<!-- adds h1, good seo, and a heading for the page! -->
<% if (title) { %>
    <h1><%= title %></h1>
  <% } else {
    res.redirect('/')
  } %>
  
  <!-- displays error messages -->
  <%- messages() %>
  
  <!-- display errors -->
  <% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
  <%  }) %>
    </ul>
  <% } %>
  
  <!-- send new message /account/send -->
  <div class="messageManagement">
    <ul class="messageList">
      <li><a href="/inbox/send">Send New Message</a></li>
      <li><a href="/inbox/archivedmessages">View (<%= locals.archivedMessageCount %>) Archived Messages</a></li>
    </ul>
    <%- inboxMessages %>
  
  </div>
  